{
  "file": "content/settings/siteMetadata.json",
  "label": "Site Metadata",
  "name": "siteMetadata",
  "fields": [
    { "label": "Title", "name": "title", "widget": "string" },
    { "label": "Site Url", "name": "siteUrl", "widget": "string" },
    { "label": "Short Slogan", "name": "slogan", "widget": "string" },
    {
      "label": "Short Description",
      "name": "description",
      "widget": "string",
      "pattern": [
        ".{80,155}",
        "Must have at least 80 characters and not more than 155"
      ]
    },
    { "label": "Logo", "name": "logo", "widget": "image" },
    {
      "label": "Logo Alternative",
      "name": "logoAlt",
      "widget": "image",
      "required": false
    },
    {
      "label": "Open Graph Default Image",
      "name": "ogImage",
      "widget": "image",
      "required": false
    },
    {
      "label": "Geo Location",
      "name": "geo",
      "widget": "object",
      "required": false,
      "fields": [
        {
          "label": "Place Name",
          "name": "placename",
          "widget": "string",
          "required": false
        },
        {
          "label": "Region",
          "name": "region",
          "widget": "string",
          "required": false
        },
        {
          "label": "Position",
          "name": "position",
          "widget": "object",
          "required": false,
          "fields": [
            { "label": "Latitude", "name": "latitude", "widget": "string" },
            { "label": "Longitude", "name": "longitude", "widget": "string" }
          ]
        }
      ]
    }
  ]
}
